<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Search</title>
    <link rel="icon" href="/images/kartof-play.png" />
    <meta content="Kartof Play" property="og:title" />
    <meta content="Searched for <%=keyword %>" property="og:description" />
    <meta content="sssr.gq" property="og:url" />
    <meta
      content="https://github.com/Kartofi/kartof-play/raw/master/imgs/preview.png"
      property="og:image"
    />
    <meta name="twitter:card" content="summary_large_image" />
    <meta content="#43B581" data-react-helmet="true" name="theme-color" />
  </head>
  <link href="/search.css" rel="stylesheet" type="text/css" />
  <link href="/common/cards.css" rel="stylesheet" type="text/css" />
  <link href="/common/buttons.css" rel="stylesheet" type="text/css" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@500;600;700&display=swap"
    rel="stylesheet"
  />
  <script type="text/javascript" src="./js/common/search.js"></script>
  <script type="text/javascript">
    function load() {
      document.getElementById("keyword").value = " <%=keyword%>".trim();
      document.getElementById("select").value = "<%=source%>";
    }
  </script>

  <body onload="load()">
    <div class="nav_bar">
      <a href="/">
        <img class="logo" src="/images/kartof-play.png" />
      </a>

      <a class="title" href="/">Kartof Play</a>
      <center>
        <input id="keyword" type="search" onsearch="search()" />
        <button class="abutton" onclick="search()">Search</button>
        <select id="select">
          <option>All</option>
          <option>GoGoAnime</option>
          <option>Animegg</option>
          <option>MAL</option>
        </select>
      </center>
    </div>
    <center>
      <a style="font-size: 40px">GoGoAnime</a>
    </center>
    <% if (data.gogo != null && data.gogo[0] != null){ %>
    <div class="container">
      <% data.gogo.forEach(function(element) { %>
      <div onclick="location.href='<%= element.watch_url %>';" class="card">
        <img class="card-img" src="<%= element.animeImg %>" />
        <br />
        <div class="data">
          <a style="color: rgb(223, 223, 255)"><%= element.source %></a>
          <a href="<%= element.watch_url %>"><%= element.animeTitle %></a>
          <br />
          <a class="important"><%= element.rating %>ðŸŒŸ</a>
        </div>
      </div>
      <% }) %>
    </div>
    <% } %>
    <br />
    <center>
      <a style="font-size: 40px">Animegg</a>
    </center>
    <% if (data.animegg != null && data.animegg[0] != null){ %>
    <div class="container">
      <% data.animegg.forEach(function(element) { %>
      <div onclick="location.href='<%= element.watch_url %>';" class="card">
        <img class="card-img" src="<%= element.animeImg %>" />
        <br />
        <div class="data">
          <a style="color: rgb(223, 223, 255)"><%= element.source %></a>
          <a href="<%= element.watch_url %>"><%= element.animeTitle %></a>
          <br />
          <a class="important"><%= element.rating %>ðŸŒŸ</a>
        </div>
      </div>

      <% }) %>
    </div>
    <% } %>

    <br />
    <center>
      <a style="font-size: 40px">MAL</a>
    </center>
    <div class="container">
      <% data.mal.forEach(function(element) { %>
      <div onclick="location.href='<%= element.watch_url %>';" class="card">
        <img class="card-img" src="<%= element.animeImg %>" />
        <br />
        <div class="data">
          <a style="color: rgb(223, 223, 255)"><%= element.source %></a>
          <a href="<%= element.watch_url %>"><%= element.animeTitle %></a>
          <br />
          <a class="important"><%= element.rating %>ðŸŒŸ</a>
        </div>
      </div>

      <% }) %>
    </div>
  </body>
</html>
