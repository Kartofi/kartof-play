<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Search</title>
    <link rel="icon" href="/images/kartof-play.png" />
    <meta content="Kartof Play" property="og:title" />
    <meta content="Searched for <%=keyword %>" property="og:description" />
    <meta content="sssr.gq" property="og:url" />
    <meta
      content="https://github.com/Kartofi/kartof-play/raw/master/imgs/preview.png"
      property="og:image"
    />
    <meta name="twitter:card" content="summary_large_image" />
    <meta content="#43B581" data-react-helmet="true" name="theme-color" />
  </head>
  <link href="/search.css" rel="stylesheet" type="text/css" />
  <link href="./common/inputs.css" rel="stylesheet" type="text/css" />
  <link href="/common/cards.css" rel="stylesheet" type="text/css" />
  <link href="/common/buttons.css" rel="stylesheet" type="text/css" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@500;600;700&display=swap"
    rel="stylesheet"
  />
  <script type="text/javascript" src="/js/common/search.js"></script>
  <script type="text/javascript">
    function load() {
      document.getElementById("keyword").value = " <%=keyword%>".trim();

      let source = "<%=source%>";

      document.getElementById("select").value = source;

      if (source == "GoGoAnime") {
        document.getElementById("animegg-title").remove();
        document.getElementById("mal-title").remove();
      } else if (source == "MAL") {
        document.getElementById("gogoanime-title").remove();
        document.getElementById("animegg-title").remove();
      } else if (source == "Animegg") {
        document.getElementById("gogoanime-title").remove();
        document.getElementById("mal-title").remove();
      }
    }
  </script>

  <body onload="load()">
    <div class="nav_bar">
      <a href="/">
        <img class="logo" src="/images/kartof-play.png" />
      </a>

      <a class="title" href="/">Kartof Play</a>
      <center>
        <input id="keyword" type="search" onsearch="search()" />
        <button class="abutton" onclick="search()">Search</button>
        <select id="select">
          <option>All</option>
          <option>GoGoAnime</option>
          <option>Animegg</option>
          <option>MAL</option>
        </select>
      </center>
    </div>
    <center>
      <a style="font-size: 40px" id="gogoanime-title">GoGoAnime</a>
    </center>
    <% if (data.gogo != null && data.gogo[0] != null){ %>
    <div class="container">
      <% data.gogo.forEach(function(element) { %>
      <div onclick="location.href='<%= element.watch_url %>';" class="card">
        <div class="card-img-holder">
          <a href="<%= element.watch_url %>">
            <img class="play-img" src="/images/play.svg" />
            <img class="card-img" src="<%= element.animeImg %>" />
          </a>
          <div class="card-info-image epNum">
            <div class="card-info-image-child">
              <a class="important" ;><%= element.rating || "N/A"%> </a
              ><img src="/images/star.svg" />
            </div>
          </div>
        </div>
        <div class="data">
          <a style="color: rgb(223, 223, 255)"><%= element.source %></a>
          <a href="<%= element.watch_url %>"><%= element.animeTitle %></a>
        </div>
      </div>
      <% }) %>
    </div>
    <% } %>

    <center>
      <a style="font-size: 40px" id="animegg-title"><br />Animegg</a>
    </center>
    <% if (data.animegg != null && data.animegg[0] != null){ %>
    <div class="container">
      <% data.animegg.forEach(function(element) { %>
      <div onclick="location.href='<%= element.watch_url %>';" class="card">
        <div class="card-img-holder">
          <a href="<%= element.watch_url %>">
            <img class="play-img" src="/images/play.svg" />
            <img class="card-img" src="<%= element.animeImg %>" />
          </a>
          <div class="card-info-image epNum">
            <div class="card-info-image-child">
              <a class="important" ;><%= element.rating || "N/A"%> </a
              ><img src="/images/star.svg" />
            </div>
          </div>
        </div>

        <div class="data">
          <a style="color: rgb(223, 223, 255)"><%= element.source %></a>
          <a href="<%= element.watch_url %>"><%= element.animeTitle %></a>
        </div>
      </div>

      <% }) %>
    </div>
    <% } %>

    <center>
      <a style="font-size: 40px" id="mal-title"><br />MAL</a>
    </center>
    <div class="container">
      <% data.mal.forEach(function(element) { %>
      <div onclick="location.href='<%= element.watch_url %>';" class="card">
        <div class="card-img-holder">
          <a href="<%= element.watch_url %>">
            <img class="play-img" src="/images/play.svg" />
            <img class="card-img" src="<%= element.animeImg %>" />
          </a>
          <div class="card-info-image epNum">
            <div class="card-info-image-child">
              <a class="important" ;><%= element.rating || "N/A"%> </a
              ><img src="/images/star.svg" />
            </div>
          </div>
        </div>
        <div class="data">
          <a style="color: rgb(223, 223, 255)"><%= element.source %></a>
          <a href="<%= element.watch_url %>"><%= element.animeTitle %></a>
        </div>
      </div>

      <% }) %>
    </div>
  </body>
</html>
